---

<Layout
  title={env.VITE_TITLE}
  description={env.VITE_DESCRIPTION}
  keywords={env.VITE_KEYWORDS}
  path={'/'}
>
  <IndexView
    categoryList={categoryList}
    client:idle
  />
</Layout>
